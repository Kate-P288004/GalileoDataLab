<Window x:Class="GalileoDataLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Galileo Data Lab"
        Height="450"
        Width="800">

    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
               Text="Galileo Data Lab, Satellite Data Processing"
               FontSize="18"
               FontWeight="SemiBold"
               Margin="0,0,0,10"/>

            <!-- Main content placeholder -->
            <Border Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4"
            Padding="10">
                <TextBlock Text="Main content will go here"
                   Opacity="0.6"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </Border>

            <!-- Footer -->
            <TextBlock Grid.Row="2"
               Text="Status: Ready"
               Margin="0,10,0,0"
               Opacity="0.7"/>
        </Grid>

    </Grid>
</Window>
