<Window x:Class="GalileoDataLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Processing"
        Height="520"
        Width="980"
        MinHeight="520"
        MinWidth="980">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top controls -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="Auto"/>
            <!-- Status strip -->
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Sigma" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="txtSigma" Text="10" Width="40" Margin="6,0,14,0"/>

            <TextBlock Grid.Column="2" Text="Mu" VerticalAlignment="Center"/>
            <TextBox Grid.Column="3" x:Name="txtMu" Text="50" Width="40" Margin="6,0,14,0"/>

            <Button Grid.Column="4"
                    x:Name="btnLoadData"
                    Content="Load Sensor Data"
                    Width="150"
                    Height="28"/>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: BOTH SENSORS LISTVIEW -->
            <GroupBox Grid.Column="0" Header="Sensor A     |     Sensor B" Margin="0,0,8,0">
                <Grid Margin="6">
                    <ListView x:Name="lvSensors">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Sensor A"
                                                DisplayMemberBinding="{Binding SensorA}"
                                                Width="110"/>
                                <GridViewColumn Header="Sensor B"
                                                DisplayMemberBinding="{Binding SensorB}"
                                                Width="110"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </GroupBox>

            <!-- SENSOR A -->
            <GroupBox Grid.Column="1" Header="Sensor A" Margin="0,0,8,0">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data list -->
                    <ListBox Grid.Column="0" x:Name="lbSensorA"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">

                        <TextBlock Text="Binary Search Iterative"/>
                        <Button x:Name="btnSearchAIter" Content="Search" Height="25"/>
                        <TextBox x:Name="txtTicksAIter" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Binary Search Recursive" Margin="0,6,0,0"/>
                        <Button x:Name="btnSearchARec" Content="Search" Height="25"/>
                        <TextBox x:Name="txtTicksARec" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Search Target" Margin="0,6,0,0"/>
                        <TextBox x:Name="txtSearchA" Height="22"/>

                        <TextBlock Text="Selection Sort" Margin="0,6,0,0"/>
                        <Button x:Name="btnSelSortA" Content="Sort" Height="25"/>
                        <TextBox x:Name="txtMsSelA" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Insertion Sort" Margin="0,6,0,0"/>
                        <Button x:Name="btnInsSortA" Content="Sort" Height="25"/>
                        <TextBox x:Name="txtMsInsA" Height="22" IsReadOnly="True"/>

                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- SENSOR B -->
            <GroupBox Grid.Column="2" Header="Sensor B">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Data list -->
                    <ListBox Grid.Column="0" x:Name="lbSensorB"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">

                        <TextBlock Text="Binary Search Iterative"/>
                        <Button x:Name="btnSearchBIter" Content="Search" Height="25"/>
                        <TextBox x:Name="txtTicksBIter" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Binary Search Recursive" Margin="0,6,0,0"/>
                        <Button x:Name="btnSearchBRec" Content="Search" Height="25"/>
                        <TextBox x:Name="txtTicksBRec" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Search Target" Margin="0,6,0,0"/>
                        <TextBox x:Name="txtSearchB" Height="22"/>

                        <TextBlock Text="Selection Sort" Margin="0,6,0,0"/>
                        <Button x:Name="btnSelSortB" Content="Sort" Height="25"/>
                        <TextBox x:Name="txtMsSelB" Height="22" IsReadOnly="True"/>

                        <TextBlock Text="Insertion Sort" Margin="0,6,0,0"/>
                        <Button x:Name="btnInsSortB" Content="Sort" Height="25"/>
                        <TextBox x:Name="txtMsInsB" Height="22" IsReadOnly="True"/>

                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- STATUS STRIP -->
        <Border Grid.Row="2"
                Background="#EEE"
                Padding="6"
                BorderBrush="Gray"
                BorderThickness="1,0,1,1">
            <TextBlock x:Name="txtStatus" Text="Status: Ready"/>
        </Border>
    </Grid>
</Window>
